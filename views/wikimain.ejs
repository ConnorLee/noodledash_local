<% if (!user) { %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/bootstrap-responsive.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Fav and touch icons -->
    <link rel="shortcut icon" href="../assets/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
</head>

<body class="<%= pagename %>" data-spy="scroll">
<div class="container">
    <div class="row">
        <h1>Whoops...</h1>

        <h2>Gotta <a href="/auth/37signals">Login with 37signals</a> first.</h2>
    </div>
</div>
<% } else { %>

<% include header.ejs %>


<div class="container">
    <div class="row">
        <div class="span12">
            <section id="wiki">
                <h1><%= pagename %>
                    <a class="btn btn-success wiki-add-content-btn" href="/wiki/<%= contentType %>/article">add some new
                        news</a>
                </h1>
                <% for(var i=0, l=shortList.length; i < l; i += 1){%>
                <article class="well well-large article" data-id="<%= shortList[i]._id %>">
                    <div class="wiki-article-header">
                        <div class="clearfix">
                            <div class="pull-right wiki-article-header-buttons-container">
                                <a class="btn btn-success btn-small wiki-article-edit-btn" href="/wiki/<%= contentType %>/article/id?id=<%= shortList[i]._id %>"><i class="icon-edit icon-white"></i> edit</a>
                                &nbsp;
                                <button class="btn btn-danger btn-small wiki-article-delete-btn"><i class="icon-remove icon-white"></i> delete</button>
                            </div>
                        </div>
                        <div>
                            <div class="strong wiki-article-header-wtitle-container">
                                <%= shortList[i].title%>
                            </div>
                            <div class="strong wiki-article-header-infocontainer">
                                &nbsp;By&nbsp;<%= shortList[i].author.toUpperCase() %><br>
                                &nbsp;<%= new Date(shortList[i].dateCreated).toLocaleDateString() %>
                                ,&nbsp;<%= new Date(shortList[i].dateCreated).toLocaleTimeString() %>
                            </div>
                        </div>
                    </div>
                    <div class="wiki-article-body"><%- shortList[i].html %></div>
                </article>
                <% } %>
            </section>
        </div>
    </div>
</div>
<!-- Modal -->
<div id="modalConfirmDelete" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Confirmation Required</h3>
    </div>
    <div class="modal-body">
        <p>Deletetions are permanent and cannot be undone. </p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <button id="wiki-confirm-delete-article-btn" class="btn" data-dismiss="modal" aria-hidden="true">Delete Article</button>
    </div>
</div>
<!-- Modal -->
<div id="modalDeletedArticle" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Article Deleted</h3>
    </div>
    <div class="modal-body">
        <p>The article has been deleted from the database.</p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
</div>
<!-- Modal -->
<div id="modalArticleDoesNotExist" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Article Can't Be Deleted</h3>
    </div>
    <div class="modal-body">
        <p>The article you reguested to delete can't be deleted because it no longer exists in the dabase.</p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
</div>
<hr>
<footer>
    <p>&copy; Noodle Education 2012</p>
</footer>

<% } %>

<% include scripts.ejs %>
<% include end.ejs %>


